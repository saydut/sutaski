const CACHE_NAME = 'sut-takip-v{{ APP_VERSION }}';
const DYNAMIC_CACHE = 'sut-takip-dynamic-v{{ APP_VERSION }}';

// Sadece herkese açık ve problemsiz statik dosyalar
const STATIC_ASSETS = [
    '/static/style.css',
    '/static/images/favicon.ico',
    '/static/images/icon.png',
    '/static/images/notification-icon-white.png',
    '/static/js/api.js',
    '/static/js/ui.js',
    '/static/js/utils.js',
    '/static/js/render-utils.js',
    '/static/js/store.js',
    '/static/js/data-loader.js',
    '/static/js/offline.js',
    '/static/js/chart-manager.js',
    '/static/js/push-manager.js',
    '/offline'
];

// --- KURULUM (INSTALL) ---
self.addEventListener('install', event => {
    self.skipWaiting(); // Yeni SW hemen aktif olsun
    event.waitUntil(
        caches.open(CACHE_NAME).then(cache => {
            console.log('SW: Statik dosyalar önbelleğe alınıyor (Sürüm: {{ APP_VERSION }})...');
            // Hata veren dosyaları (CDN vb.) pas geçerek diğerlerini yükle
            return Promise.all(
                STATIC_ASSETS.map(url => {
                    return cache.add(url).catch(err => {
                        console.warn('SW: Dosya önbelleğe alınamadı (Önemsiz):', url);
                    });
                })
            );
        })
    );
});

// --- AKTİFLEŞTİRME (ACTIVATE) ---
self.addEventListener('activate', event => {
    event.waitUntil(
        caches.keys().then(keys => {
            return Promise.all(
                keys.map(key => {
                    // Versiyon değiştiyse eski cache'leri sil
                    if (key !== CACHE_NAME && key !== DYNAMIC_CACHE) {
                        console.log('SW: Eski önbellek temizleniyor:', key);
                        return caches.delete(key);
                    }
                })
            );
        })
    );
    return self.clients.claim();
});

// --- İSTEKLERİ YAKALAMA (FETCH) ---
self.addEventListener('fetch', event => {
    const url = new URL(event.request.url);

    // 1. API ve POST isteklerini ASLA önbellekleme (Network Only)
    if (url.pathname.startsWith('/api/') || event.request.method !== 'GET') {
        return;
    }

    // 2. HTML Sayfaları (Network First, sonra Cache)
    if (event.request.headers.get('accept').includes('text/html')) {
        event.respondWith(
            fetch(event.request)
                .then(fetchRes => {
                    // 401 (Giriş Sayfası) ve Hatalı yanıtları cache'leme
                    if (!fetchRes.ok || fetchRes.status === 401) {
                        return fetchRes;
                    }
                    // Başarılı HTML'i dinamik cache'e at
                    return caches.open(DYNAMIC_CACHE).then(cache => {
                        cache.put(event.request.url, fetchRes.clone());
                        return fetchRes;
                    });
                })
                .catch(() => {
                    // İnternet yoksa cache'den dön
                    return caches.match(event.request).then(response => {
                        if (response) return response;
                        // Cache'de de yoksa offline sayfasını göster
                        return caches.match('/offline');
                    });
                })
        );
        return;
    }

    // 3. Statik Dosyalar (Cache First, sonra Network)
    // Tailwind gibi CDN'ler hata verirse yoksay (cors policy yüzünden)
    event.respondWith(
        caches.match(event.request).then(response => {
            return response || fetch(event.request).then(fetchRes => {
                // Sadece kendi domainimizden gelen başarılı dosyaları cache'le
                if (fetchRes.ok && url.origin === self.location.origin) {
                    caches.open(DYNAMIC_CACHE).then(cache => {
                        cache.put(event.request.url, fetchRes.clone());
                    });
                }
                return fetchRes;
            }).catch(() => {
                // CDN veya ağ hatası durumunda sessizce null dön
                return null;
            });
        })
    );
});

// --- PUSH BİLDİRİMLERİ (EKSİK OLAN KISIM BUYDU) ---
self.addEventListener('push', function(event) {
    if (!(self.Notification && self.Notification.permission === 'granted')) {
        return;
    }

    let data = {};
    if (event.data) {
        try {
            data = event.data.json();
        } catch (e) {
            data = { title: 'Süt Takip', body: event.data.text() };
        }
    }

    const title = data.title || 'Süt Takip Sistemi';
    const options = {
        body: data.body || 'Yeni bir bildiriminiz var.',
        icon: '/static/images/icon.png',
        badge: '/static/images/notification-icon-white.png',
        vibrate: [100, 50, 100],
        data: {
            url: data.url || '/' // Tıklanınca gidilecek adres
        },
        actions: data.actions || []
    };

    event.waitUntil(
        self.registration.showNotification(title, options)
    );
});

// --- BİLDİRİME TIKLAMA ---
self.addEventListener('notificationclick', function(event) {
    event.notification.close(); // Bildirimi kapat

    event.waitUntil(
        clients.matchAll({type: 'window', includeUncontrolled: true}).then(windowClients => {
            // Eğer uygulama zaten açıksa ona odaklan
            for (var i = 0; i < windowClients.length; i++) {
                var client = windowClients[i];
                if (client.url === event.notification.data.url && 'focus' in client) {
                    return client.focus();
                }
            }
            // Açık değilse yeni pencere aç
            if (clients.openWindow) {
                return clients.openWindow(event.notification.data.url);
            }
        })
    );
});
// Bu bir Jinja2 şablonudur. Flask tarafından render edilecektir.
// {{ url_for(...) }} ifadeleri Flask tarafından URL'lere dönüştürülecektir.

const CACHE_NAME = 'suttakip-v1.0';

// Offline modda çalışması için önbelleğe alınacak temel dosyalar
const URLS_TO_CACHE = [
    // Ana Sayfalar
    '{{ url_for("main.index") }}',
    '{{ url_for("tedarikci.tedarikciler") }}',
    '{{ url_for("sut.sut_yonetimi") }}',
    '{{ url_for("yem.yem_yonetimi") }}',
    '{{ url_for("finans.finans_yonetimi") }}',
    // Offline sayfası (main.py'de /offline rotası olmalı)
    // '{{ url_for("main.offline") }}', 
    
    // Temel CSS ve JS
    '{{ url_for("static", filename="style.css") }}',
    '{{ url_for("static", filename="theme.js") }}',
    '{{ url_for("static", filename="js/api.js") }}',
    '{{ url_for("static", filename="js/utils.js") }}',
    '{{ url_for("static", filename="js/modal_handler.js") }}',
    '{{ url_for("static", filename="js/ui.js") }}',
    
    // Kütüphaneler (CDN)
    'https://cdn.tailwindcss.com',
    'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css',
    'https://cdn.jsdelivr.net/npm/chart.js'
];

// --- 1. Install Event: Önbelleği (Cache) Doldur ---
self.addEventListener('install', (event) => {
    console.log('Service Worker: Yükleniyor (install)...');
    event.waitUntil(
        caches.open(CACHE_NAME)
            .then((cache) => {
                console.log('Service Worker: Önbellek açıldı, temel dosyalar ekleniyor.');
                return cache.addAll(URLS_TO_CACHE);
            })
            .then(() => {
                // Yeni Service Worker'ı hemen aktive et
                return self.skipWaiting();
            })
    );
});

// --- 2. Activate Event: Eski Önbellekleri Temizle ---
self.addEventListener('activate', (event) => {
    console.log('Service Worker: Aktive ediliyor (activate)...');
    event.waitUntil(
        caches.keys().then((cacheNames) => {
            return Promise.all(
                cacheNames.map((cacheName) => {
                    if (cacheName !== CACHE_NAME) {
                        console.log('Service Worker: Eski önbellek temizleniyor:', cacheName);
                        return caches.delete(cacheName);
                    }
                })
            );
        }).then(() => {
            // Aktif olduktan sonra bağlı tüm client'ları kontrolü altına al
            return self.clients.claim();
        })
    );
});

// --- 3. Fetch Event: İstekleri Yönet (Network first, fallback to cache) ---
self.addEventListener('fetch', (event) => {
    const requestUrl = new URL(event.request.url);

    // Sadece GET isteklerini ve http/https protokollerini önbelleğe al
    if (event.request.method !== 'GET' || !(requestUrl.protocol === 'http:' || requestUrl.protocol === 'https:')) {
        event.respondWith(fetch(event.request));
        return;
    }

    // API isteklerini (/api/) her zaman ağdan al (offline'da çalışmaz)
    if (requestUrl.pathname.startsWith('/api/')) {
        event.respondWith(fetch(event.request));
        return;
    }
    
    // Diğer tüm istekler için (Sayfalar, CSS, JS, Resimler):
    // Önce ağı dene, başarısız olursa önbelleğe bak.
    event.respondWith(
        fetch(event.request)
            .then((networkResponse) => {
                // Ağdan başarılı yanıt geldiyse, önbelleği güncelle
                // (Dinamik olarak yeni ziyaret edilen sayfaları da önbelleğe alır)
                return caches.open(CACHE_NAME).then((cache) => {
                    cache.put(event.request, networkResponse.clone());
                    return networkResponse;
                });
            })
            .catch(() => {
                // Ağ hatası (offline) durumunda önbellekten yanıt ver
                return caches.match(event.request)
                    .then((cachedResponse) => {
                        return cachedResponse;
                        // Eğer offline sayfası tanımlıysa:
                        // return cachedResponse || caches.match('{{ url_for("main.offline") }}');
                    });
            })
    );
});


// --- 4. Push Event: Anlık Bildirimleri Dinle ---
self.addEventListener('push', (event) => {
    console.log('Service Worker: Push bildirimi alındı.');

    let data = {};
    if (event.data) {
        try {
            data = event.data.json();
        } catch (e) {
            data = { title: 'Yeni Bildirim', body: event.data.text() };
        }
    }
    
    const title = data.title || 'Süt Takip Sistemi';
    const options = {
        body: data.body || 'Yeni bir güncelleme var.',
        icon: '{{ url_for("static", filename="images/icon.png") }}', // Notifikasyon ikonu
        badge: '{{ url_for("static", filename="images/icon.png") }}', // (Android)
        // ... (vibrate, tag, renotify vb.)
    };

    event.waitUntil(
        self.registration.showNotification(title, options)
    );
});